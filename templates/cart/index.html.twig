{% extends 'base.html.twig' %}

{% block title %}Hello CartController!{% endblock %}

{% block body %}
    <table class="table table-hover">
        <thead>
        <tr>
            <th scope="col">Produit</th>
            <th scope="col">Prix</th>
            <th scope="col">Quantité</th>
            <th scope="col">Sous-Total</th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>

        {% for item in cart %}

            <tr class="table-active">

                <td>{{ item.product.name }}</td>
                <td>{{ item.product.price}} €</td>
                <td>{{ item.quantity }}</td>
                <td>{{ item.product.price * item.quantity}} €</td>
                <td>
                    <a href="{{ path('app_cart_remove_one', {id:item.product.id}) }}" class="btn btn-secondary"><strong>-</strong></a>
                    <a href="{{ path('app_cart_add_from_cart', {id:item.product.id, quantity:1}) }}" class="btn btn-success"><strong>+</strong></a>
                    <a href="{{ path('app_cart_remove_whole', {id:item.product.id}) }}" class="btn btn-danger"><strong>X</strong></a>

                </td>
            </tr>
        {% endfor %}
        <tr class="table-warning">

            <td><a href="{{ path('app_cart_empty') }}" class="btn btn-danger">Tout retirer</a></td>
            <td></td>
            <td> Grand Total :</td>
            <td><strong> {{ total}} €</strong></td>
            <td><a href="{{ path('app_payment', {id:order.id}) }}" class="btn btn-success">Passer la commande</a></td>
        </tr>
        </tbody>
    </table>
{% endblock %}